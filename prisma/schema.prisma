generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  bio       String?  @db.Text
  imageUrl  String?
  songs     Song[]
  albums    Album[]  @relation("ArtistToAlbum")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Album {
  id          Int       @id @default(autoincrement())
  title       String
  releaseDate DateTime?
  coverUrl    String?
  artists     Artist[]  @relation("ArtistToAlbum")
  songs       Song[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([title, releaseDate])
}

model Song {
  id          Int      @id @default(autoincrement())
  title       String
  duration    Int?
  artists     Artist[]
  album       Album?   @relation(fields: [albumId], references: [id])
  albumId     Int?
  trackNumber Int?
  lyric       Lyric?   @relation(fields: [lyricId], references: [id])
  lyricId     Int?     @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Lyric {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  language  String   @default("mg")
  song      Song?
  createdBy String?
  isSync    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
